<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="345dp"
            android:layout_height="65dp"
            android:text="@string/homepage"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonFunctionality1"
            android:layout_width="351dp"
            android:layout_height="99dp"
            android:layout_marginTop="96dp"
            android:text="@string/functionality1"
            android:onClick="openFunctionality1"

            />

        <Button
            android:id="@+id/buttonFunctionality2"
            android:layout_width="351dp"
            android:layout_height="99dp"
            android:layout_marginTop="20dp"
            android:onClick="openFunctionality2"
            android:text="@string/functionality2" />

        <Button
            android:id="@+id/buttonFunctionality3"
            android:layout_width="350dp"
            android:layout_height="99dp"
            android:layout_marginTop="20dp"
            android:onClick="openFunctionality3"
            android:text="@string/functionality3" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>